  margin: 20rpx;
}

.chat-content {
  padding: 10rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  max-width: 70%;
}

.chat-content.user {
  background-color: #b7e1cd;
  color: #000;
  display: inline-block;
  position: relative;
}

.chat-content.user::before {
  content: '';
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #b7e1cd;
  opacity: 0.5;
  z-index: -1;
}


.chat-content.ai {
  background-color: #f2f2f2;
}



.area button {
  font-size: 28rpx;
