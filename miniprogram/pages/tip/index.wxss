  background-color: #4caf50;
  color: #fff;
  margin: 0 auto;
  display: block;
}


.btn {
  width: 90%;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn button {
  width: 40%;
  height:40%;
  font-size: 20rpx;
  padding: 10rpx 10rpx;
  border-radius: 10rpx;
  background-color: #4caf50;
  color: #fff;
  margin: 0 10rpx;
}

.btn button[type="primary"] {
  margin-right: 20rpx;
}

.btn-group {
  width: 750rpx;
  display: flex;
  flex-direction: column;
