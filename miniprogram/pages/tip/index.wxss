.chat-wrapper {
  position: relative;
  height: 100%;
}

.chat-list {
  height: 100%;
}

.chat-item {
  margin: 20rpx;
}

.chat-content {
  padding: 10rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  max-width: 70%;
}

.chat-content.user {
  background-color: #b7e1cd;
  color: #000;
  display: inline-block;
  position: relative;
}

.chat-content.user::before {
  content: "";
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #b7e1cd;
  opacity: 0.5;
  z-index: -1;
}

.chat-content.ai {
  background-color: #f2f2f2;
}
.toolbar {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}
.separator {
  width: 2rpx;
  height: 40rpx;
  background-color: #ccc;
  margin: 0 20rpx;
}

.area button {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background-color: #4caf50;
  color: #fff;
  margin: 0 auto;
  display: block;
}

.btn {
  width: 90%;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn button {
  width: 25%;
  height: 50px;
  height: 60%;
  font-size: 20rpx;
  padding: 10rpx 10rpx;
  border-radius: 10rpx;
  background-color: #4caf50;
  color: #fff;
  margin: 0 10rpx;
}

.btn button[type="primary"] {
  margin-right: 20rpx;
}

.btn-group {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  gap: 50rpx;
}
.btn-green {
  background-color: #00cd00;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 10px 20px;
  font-size: 16px;
}
.btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
  background-color: #fff;
  border-top: 1px solid #eee;
}

.input {
  flex: 1;
  height: 30px;
  line-height: 40px;
  padding: 0 10px;
  border: none;
  border-radius: 20px;
  background-color: #f2f2f2;
  font-size: 16px;
}
.black-button {
  color: #000000; /* 黑色文字 */
  border: none; /* 去除边框 */
  border-radius: 4px; /* 圆角 */
  padding: 10px 20px; /* 内边距 */
  font-size: 16px; /* 字体大小 */
}
.black-button.small-btn {
  font-size: 14px; /* 按钮文字大小 */
  padding: 5px 10px; /* 按钮内边距 */
}
.button-container {
  display: flex;
  justify-content: space-between;
}

.select-personality-btn {
  background-color: #fff;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  color: #333;
  font-size: 16px;
  outline: none;
  cursor: pointer;
}

.personality-menu {
  position: fixed;
  top:30%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: none;
  z-index: 999;
}

.personality-menu.show-menu {
  display: block;
}

.personality-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  font-size: 16px;
  color: #333;
  cursor: pointer;
  user-select: none;
}

.personality-option .option-text {
  flex: 1;
}

.personality-option .option-status {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  margin-left: 10px;
}

.personality-option .option-status.selected {
  background-color: #3CB371;
}

